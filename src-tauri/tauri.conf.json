{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ClaudeMiner",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      },
      "dialog": {
        "all": false,
        "confirm": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "scope": ["$HOME/.claude/**"]
      },
      "path": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.claudeminer.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "minimumSystemVersion": "10.13",
        "entitlements": "entitlements.plist",
        "signingIdentity": "Developer ID Application: JUKI JUNG (JJX75F53MA)"
      },
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ClaudeMiner",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "url": "splash.html"
      }
    ]
  }
}
